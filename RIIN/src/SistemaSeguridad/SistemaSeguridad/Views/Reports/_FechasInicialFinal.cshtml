<table>
    <tr>
        <td>Fecha Inicial</td>
        <td></td>
        <td><input type="text" id="txtFechaInicio" /></td>
        <td></td>
        <td>Fecha Final</td>
        <td><input type="text" id="txtFechaFinal" /></td>
    </tr>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        var dt = new Date();

        $("#txtFechaInicio").val(formatDate(dt, 1));
        $("#txtFechaInicio").datepicker({ dateFormat: 'yy/mm/dd' });

        $("#txtFechaFinal").val(formatDate(dt, 1));
        $("#txtFechaFinal").datepicker({ dateFormat: 'yy/mm/dd' });
    });
</script>
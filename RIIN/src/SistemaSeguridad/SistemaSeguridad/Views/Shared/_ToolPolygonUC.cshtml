<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<style type="text/css">
    .topbutton
    {
        top: 300px;
        left: 300px;
        padding-top: 10px;
        padding-bottom: 10px;
        padding-left: 10px;
        float: left;
    }
</style>
<div id="map_canvas" class="map"></div>
<div id="geocoordinates" style="visibility: hidden;"></div>
<div id="buttonrow">
    <div class="topbutton">
        <input type="button" value="Edit lines" id="btnEdit" />
    </div>
    <div class="topbutton">
        <input type="button" value="Clear Map" id="btnClear" />
    </div>
</div>
<script type="text/javascript">
//<![CDATA[
    $(document).ready(function () {
        //Button Event binding
        var polygon = new PolygonControl("map_canvas");
        var map = polygon.preparePolygon();
        google.maps.event.addListener(map, 'click', polygon.addLatLng);

        $("#btnEdit").bind("click", function() {
            polygon.editlines();
        });
        $("#btnClear").bind("click", function () {
            polygon.clearMap();
        });
    });
//]]>
</script>
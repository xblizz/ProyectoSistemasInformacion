@using SistemaSeguridad.Helpers
@model SistemaSeguridad.Models.PasswordModel

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>Login</title>
        <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
        <script src="@Url.JavaScript("Common.function.js")" type="text/javascript"></script>
        <link href='@Url.Stylesheet("Login.css")' rel="stylesheet" type="text/css" />
    </head>
    <body>
      @Html.ValidationSummary(true)
        <div id="cPassword" class="sessionblock">
            <h2>Cambio de contraseña</h2>
            <form id="form" action="@Url.Action("CambiaContraseña")" method="post">
                
                <fieldset>
                    <label for="aPassword">Contraseña actual</label><br>
                    <input id="aPassword" class="loginstuff" name="OldPassword" value="" tabindex="1" type="password">
                    @Html.ValidationMessageFor(model => model.OldPassword)
                </fieldset>
                <fieldset>
                    <label for="nPassword">Contraseña nueva</label><br>
                    <input id="nPassword" class="loginstuff" name="NewPassword" value="" tabindex="2" type="password">
                    @Html.ValidationMessageFor(model => model.NewPassword)
                </fieldset>
                <fieldset>
                    <label for="cPassword">Confirmar contraseña</label><br>
                    <input id="cPassword" class="loginstuff" name="ConfirmPassword" value="" tabindex="3" type="password">
                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                </fieldset>
                <a id="btncPassword" class="button affirmative floatleftbutton submit_form" tab-index="4">Cambiar password</a>
                <a id="btnCancelar" class="button decline floatleftbutton submit_form" tab-index="4">Salir</a>
                <input class="secretsubmit" style="visibility:hidden;" type="submit">
                <br/>
               
            </form>
        </div>
    
    

        
    </body>
</html>
<script type="text/javascript">
    $(document).ready(function () {
        $("#btncPassword").click(function(e) {
            $('#form').submit();
        });

        $("#btnCancelar").click(function (e) {
          var url = "@Url.Action("Index")";
            $(location).attr('href', url);
        });
    });
</script>
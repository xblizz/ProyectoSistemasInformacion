@using SistemaSeguridad.Helpers 
@{
    ViewBag.Title = @SistemaSeguridad.Resources.EmpresaStrings.ModuleName;
}

<h2>@SistemaSeguridad.Resources.EmpresaStrings.ViewCreateName</h2>


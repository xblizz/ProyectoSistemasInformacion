@model SS.Core.Entities.AlertaIncidente
@{
    ViewBag.Title = @SistemaSeguridad.Resources.AlertasIncidenteStrings.ModuleName;
}
<h2>@SistemaSeguridad.Resources.AlertasIncidenteStrings.ViewEditName</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()){
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Configuración de alerta por tipo de incidente</legend>

        <div class="editor-label">
            Empresa
        </div>
        <div class="editor-field">
            @Html.DropDownList("EmpresaId", @SistemaSeguridad.Resources.GlobalStrings.selectOne)
            @Html.ValidationMessageFor(model => model.EmpresaId)
        </div>

        <div class="editor-label">
            Tipo de incidente
        </div>
        <div class="editor-field">
            @Html.DropDownList("TipoIncidenteId", @SistemaSeguridad.Resources.GlobalStrings.selectOne)
            @Html.ValidationMessageFor(model => model.TipoIncidenteId)
        </div>

        <div class="editor-label">
            Lista de emails
        </div>
        <div class="editor-multiline-field">
            @Html.TextAreaFor(model => model.Emails)
            @Html.ValidationMessageFor(model => model.Emails)
        </div>
        <div class="editor-label">
            Recibir correos de incidentes de otras empresas
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RecibirOtrasEmpresas)
            @Html.ValidationMessageFor(model => model.RecibirOtrasEmpresas)
        </div>
        <div class="editor-label">
            Recibir correos de incidentes para mi empresa
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RecibirMiEmpresa)
            @Html.ValidationMessageFor(model => model.RecibirMiEmpresa)
        </div>
        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
